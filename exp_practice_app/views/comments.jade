extends layout

block content
            if message
                    .alert.alert-success #{ message }

                if errors
                    each error, i in errors
                        li.alert.alert-danger #{ error.msg }

            h1 Comments
            p Please Post your comments bellow
                form(method='post',action='/users/comments')
                    .form-group
                        label From
                        input.form-control(name='fromm', type='text' )
                    .form-group
                        label Comment
                        textarea.form-control(name='comm',rows='5')
                    input.btn.btn-default(name='submit', type='submit',value='SUBMIT')